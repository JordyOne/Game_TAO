<h1>new user registration</h1>
<%= form_for @user, url: users_path do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.submit 'Register' %>
    </div>
<% end %>