<div class="col-md-4 col-md-offset-4 text">
<h1>Game To Aid Others</h1>
</div>
<div class="row">
<div class="col-md-1 col-md-offset-5">
<a href="<%= new_user_path %>" class="btn btn-primary btn-lg">Register</a>
</div>
</div>
<div class="row">
<div class="col-md-1 col-md-offset-5 text">
  <h1>OR</h1>
</div>
</div>
<div class="">

  <% if flash[:notice] %>
      <%= flash[:notice] %>
  <% end %>

</div>

<%= form_for @user, url: signin_path, class: "form-horizontal center" do |f| %>
    <div class="form-group">
      <%= f.label :email, "Email:", class: "col-md-1 col-md-offset-3 control-label" %>
      <div class="col-md-5">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password:", class: "col-md-1 col-md-offset-3 control-label" %>
      <div class="col-md-5">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <%= f.submit "Submit", class: "btn btn-default btn-primary col-md-1 col-md-offset-5" %>
<% end %>
